<!DOCTYPE html>
<html>
{{> head}}

<body class="uk-background-secondary">
  <h1 class="uk-padding-large df-title uk-heading-medium uk-background-secondary uk-text-center uk-text-muted">generic anime website</h1>
  <nav class="uk-navbar-container uk-margin uk-navbar-transparent" uk-navbar>

    <div class="nav-overlay uk-navbar-center">

      <ul class="uk-navbar-nav">
        {{#if page}}
        <li class="uk-active"><a href="/">recent</a></li>
        <li class="uk-parent"><a href="?id=p">popular</a></li>
        {{else}}
        <li class="uk-parent"><a href="/">recent</a></li>
        <li class="uk-active"><a href="/?id=p">popular</a></li>
        {{/if}}
      </ul>
      <a href="https://ko-fi.com/wonderfulsubs" class="uk-navbar-toggle uk-margin-vertical" uk-toggle>
        <span uk-icon="icon: lifesaver"></span> </a>
      <a class="uk-navbar-toggle" uk-search-icon uk-toggle="target: .nav-overlay; animation: uk-animation-fade"
        href="#"></a>
    </div>


    <div class="nav-overlay uk-navbar-center uk-flex-1" hidden>

      <div class="uk-navbar-item uk-width-expand">
        <form class="uk-search uk-search-navbar uk-width-1-1">
          <input class="uk-search-input" type="search" placeholder="Search..." action="/search" name="q" autofocus>
        </form>
      </div>

      <a class="uk-navbar-toggle" uk-close uk-toggle="target: .nav-overlay; animation: uk-animation-fade" href="#"></a>

    </div>

  </nav>

  <section class="section">
    <div class="container uk-padding-large uk-animation-slide-bottom-medium uk-animation-toggle uk-padding-remove-bottom">
      {{#makeGridAF data}}{{title}}[var]{{poster_wide.[7].source}}{{/makeGridAF}}
    </div>
    <nav class="uk-navbar-container uk-navbar-transparent uk-margin-medium-bottom" uk-navbar>
    <div class="nav-overlay uk-navbar-center">
      <ul class="uk-navbar-nav">
        {{#if back}}
        <li class="uk-parent"><a href="../af?p={{prev}}"><span uk-icon="icon: chevron-left"></span></a></li>
        {{/if}}
        <li class="uk-parent"><a href="#modal-center" uk-toggle><span uk-icon="icon: album"></span></a></li>
        {{#if fwd}}
        <li class="uk-parent"><a href="../af?p={{next}}"><span uk-icon="icon: chevron-right"></span></a></li>
        {{/if}}
        <div id="modal-center" class="uk-flex-top" uk-modal>
          <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">

            <button class="uk-modal-close-default" type="button" uk-close></button>
            <p>{{{page}}}</p>
          </div>
        </div>
        <div id="modal-center-2" class="uk-flex-top uk-modal-full" uk-modal>
        </div>
      </ul>
    </div>
  </nav>
  </section>
</body>
{{> footer}}

</html>